FROM python:3.9-slim

# Install system dependencies including libsndfile1 for audio processing
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    libsndfile1 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install dependencies (enhanced simulation without full Magenta)
COPY requirements-magenta.txt /app/
RUN pip install --upgrade pip && \
    pip install -r requirements-magenta.txt

# Copy the Magenta service code
COPY magenta_service.py /app/

# Create shared directory for audio processing
RUN mkdir -p /app/shared

# Expose port for API
EXPOSE 5000

# Set environment variables
ENV FLASK_APP=magenta_service.py
ENV FLASK_ENV=production

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Start the Flask API service
CMD ["python", "magenta_service.py"]